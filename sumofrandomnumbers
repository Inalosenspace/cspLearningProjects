using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace learningcsp3
{
    class Program
    {
    

        static void Main(string[] args)
        {
            Random random = new Random();
            int sum = 0;

            //1st version with user input choice number of dieces
            //Console.WriteLine("How much dieces do you want?");

            //int numberOfDieces = Convert.ToInt32(Console.ReadLine());

            //for (int i=0;i<numberOfDieces;i++)
            //{
            //    Console.WriteLine("Number: {0} => Current sum: {1}", random.Next(6) + 1, sum += random.Next(6) + 1);

            //}

            //2nd Version => program won't stop until user dont type "exit" or "quit"
     
            string userChoice;

            Console.WriteLine("Program counts sum of numbers until you type exit or quit");

            while (true)
            {
                
                userChoice = Console.ReadLine().ToLower();

                //Checking if the user want to stop the program
                if (userChoice == "quit" || userChoice == "exit") break;

                //Adding sum
                sum += random.Next(6) + 1;

                //Current sum generated by random number
                Console.WriteLine("Sum: {0}", sum);
            }

            Console.ReadLine();
        }
    }
}
